#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

ARCH = 32bits
DEB_BUILD_ARCH_BITS = $(shell dpkg-architecture -qDEB_BUILD_ARCH_BITS)
PHP_EXTENSION_DIR = $(shell /usr/bin/php-config5 --extension-dir)

ifeq (64, $(DEB_BUILD_ARCH_BITS))
	ARCH = 64bits
endif
@echo "Arch = $(ARCH)"


configure: configure-stamp
configure-stamp:
	dh_testdir
	cp -a phalcon*/build/$(ARCH) build-php5
	cd build-php5/ && phpize5 && ./configure --enable-phalcon --with-php-config=/usr/bin/php-config5 

build: build-arch build-indep

build-arch: build-stamp

build-indep: build-stamp

build-stamp: configure-stamp 
	dh_testdir
	cd build-php5 && $(MAKE)

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf build-php5
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	cd build-php5 && $(MAKE) INSTALL_ROOT=$(CURDIR)/debian/php5-phalcon install 

	mkdir -p debian/php5-phalcon/etc/php5/mods-available
	echo "zend_extension=phalcon.so" > debian/php5-phalcon/etc/php5/mods-available/phalcon.ini

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	#dh_installchangelogs xdebug-*/NEWS
	dh_installdocs
	dh_installexamples
	dh_install
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch

.PHONY: build clean binary-indep binary-arch binary install configure 
